<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="demo.controller.OrderController">

    <GridPane hgap="10" vgap="10">
        <Label text="Nama Pelanggan" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Menu" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="tfMenu" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Jumlah" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfQty" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Button text="Tambah" onAction="#handleAdd" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Button text="Hapus" onAction="#handleDelete" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <TableView fx:id="table">
        <columns>
            <TableColumn fx:id="colName" text="Nama Pelanggan"/>
            <TableColumn fx:id="colMenu" text="Menu"/>
            <TableColumn fx:id="colQty" text="Jumlah"/>
        </columns>
    </TableView>
</VBox>
